+    end
+
+    -- Optional sysroot
+    if _OPTIONS['sysroot'] ~= nil then
+        buildoptions({ '--sysroot=' .. _OPTIONS['sysroot'] })
+        linkoptions({ '--sysroot=' .. _OPTIONS['sysroot'] })
+    end
